<section class="edit">
        <h2>Editando o Carro</h2>
        <form action="/cars/update/{{car.id}}" method="POST">
            <label for="name">Name:</label>
            <input type="text" id="nome" name="nome" value="{{car.nome}}">

            <label for="model">Model:</label>
            <input type="text" id="modelo" name="modelo" value="{{car.modelo}}">

            <label for="year">Year:</label>
            <input type="number" id="ano" name="ano" value="{{car.ano}}">

            <label for="brand">Brand:</label>
            <input type="text" id="marca" name="marca" value="{{car.marca}}">

            <button type="submit">Editar</button>
        </form>
    </section>

