.car-card {
    background: #2e2e2e;
    border: 2px solid #ff0000;
    border-radius: 10px;
    padding: 20px;
    margin: 10px;
    width: 250px;
    display: inline-block;
    box-shadow: 0 0 15px rgba(255, 0, 0, 0.6);
    transition: transform 0.3s, box-shadow 0.3s;
}

.car-card:hover {
    transform: scale(1.05);
    box-shadow: 0 0 30px rgba(255, 0, 0, 0.9);
}

.car-card h3 {
    font-size: 1.5rem;
    margin-bottom: 10px;
}

.car-card p {
    margin: 5px 0;
    font-size: 1rem;
}

.edit-btn, .delete-btn {
    background: #1e1e1e;
    color: white;
    border: 2px solid #ff0000;
    border-radius: 5px;
    padding: 10px 15px;
    margin: 5px;
    cursor: pointer;
    font-size: 1rem;
    position: relative;
    overflow: hidden;
}

.edit-btn:hover, .delete-btn:hover {
    background: #ff0000;
    color: #1e1e1e;
    box-shadow: 0 0 10px #ff0000;
}

/* Efeito de LED nos botões */
.edit-btn::before, .delete-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 0, 0, 0.5), transparent);
    transform: skewX(-45deg);
    transition: left 0.3s;
}

.edit-btn:hover::before, .delete-btn:hover::before {
    left: 100%;
    transition: left 0.3s;
}

/* Layout Responsivo */
@media (max-width: 768px) {
    .car-card {
        width: 90%;
    }
}
